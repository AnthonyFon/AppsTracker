<UserControl x:Class="AppsTracker.Views.SettingsHostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:AppsTracker.Controls"
             xmlns:viewModels="clr-namespace:AppsTracker.ViewModels"
             xmlns:views="clr-namespace:AppsTracker.Views"
             xmlns:settingsViews="clr-namespace:AppsTracker.Views.SettingsViews"
             xmlns:local="clr-namespace:AppsTracker"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:ConvertPageNameToStyle x:Key="convertPageNameToSyle"
                                      SelectedLabelStyle="{StaticResource SelectedLabelStyle}"
                                      SelectableLabelStyle="{StaticResource SelectableLabelStyle}" />
        <ItemsPanelTemplate x:Key="hostViewTemplate">
            <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
        <DataTemplate x:Key="lbItemTemplate">
            <Label Style="{DynamicResource LBNavLabelStyle}"
                   Content="{Binding Title}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SettingsGeneralViewModel}">
            <settingsViews:GeneralView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SettingsLoggingViewModel}">
            <settingsViews:LoggingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SettingsScreenshotsViewModel}">
            <settingsViews:ScreenshotsView />
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"
                    Margin="20,25,30,20">
            <Label Style="{Binding SelectedChild, Converter={StaticResource convertPageNameToSyle}, ConverterParameter=GENERAL}"
                   Content="GENERAL"
                   FontSize="11"
                   Margin="15,5,15,0"
                   HorizontalAlignment="Left">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftClick"
                                  Command="{Binding ChangePageCommand}"
                                  CommandParameter="{x:Type viewModels:SettingsGeneralViewModel}" />
                </Label.InputBindings>
            </Label>

            <Label Style="{Binding SelectedChild, Converter={StaticResource convertPageNameToSyle}, ConverterParameter=LOGGING}"
                   Content="LOGGING"
                   FontSize="11"
                   Margin="15,5,15,0"
                   HorizontalAlignment="Left">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftClick"
                                  Command="{Binding ChangePageCommand}"
                                  CommandParameter="{x:Type viewModels:SettingsLoggingViewModel}" />
                </Label.InputBindings>
            </Label>
            <Label Style="{Binding SelectedChild, Converter={StaticResource convertPageNameToSyle}, ConverterParameter=SCREENSHOTS}"
                   Content="SCREENSHOTS"
                   FontSize="11"
                   Margin="15,5,15,0"
                   HorizontalAlignment="Left">
                <Label.InputBindings>
                    <MouseBinding Gesture="LeftClick"
                                  Command="{Binding ChangePageCommand}"
                                  CommandParameter="{x:Type viewModels:SettingsScreenshotsViewModel}" />
                </Label.InputBindings>
            </Label>

            <Label Style="{Binding SelectedChild, Converter={StaticResource convertPageNameToSyle}, ConverterParameter=APPS}"
                   Content="BLOCKED APPS"
                   FontSize="11"
                   Margin="15,5,15,0"
                   HorizontalAlignment="Left" />

            <!--<RadioButton Name="rbMasterPswd"
