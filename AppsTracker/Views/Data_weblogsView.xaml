        <DataTemplate x:Key="dateTemplate">
            <Label Style="{DynamicResource GVLabelStyle}"
                   Content="{Binding Date}" />
        </DataTemplate>
        <DataTemplate x:Key="eventTemplate">
            <Label Style="{DynamicResource GVLabelStyle}"
                   Content="{Binding Url}" />
        </DataTemplate>
        
    </UserControl.Resources>
    <Grid>
        <Border Style="{DynamicResource BorderStyle}">
 
            <Grid>
                <controls:FilterableListView Background="Transparent"
                                             x:Name="mainContentHolder"
                                             ItemsSource="{Binding WebLogCollection, UpdateSourceTrigger=PropertyChanged}"
                                             BorderBrush="{x:Null}"
                                             BorderThickness="0"
                                             ItemContainerStyle="{DynamicResource ListViewItemStyle}"
                                             Margin="10,0,10,0"
                                             FilterType="{StaticResource webLog}"
                                             VirtualizingStackPanel.VirtualizationMode="Recycling"
                                             VirtualizingStackPanel.IsVirtualizing="True"
                                             SelectionMode="Extended">
                    <controls:FilterableListView.InputBindings>
                        <KeyBinding Command="{Binding DeleteFileLogsCommand}"
                                    CommandParameter="{Binding ElementName=mainContentHolder, Path=SelectedItems}"
                                    Key="Delete" />
                    </controls:FilterableListView.InputBindings>
                    <controls:FilterableListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource HeaderStyle}">
                            <controls:SortableGridViewColumn Header="Date"
                                                             CellTemplate="{StaticResource dateTemplate}"
                                                             SortPropertyName="Date" />
                            <controls:SortableGridViewColumn Header="Website"
                                                             CellTemplate="{StaticResource eventTemplate}"
                                                             SortPropertyName="Url" />
                           
                        </GridView>
                    </controls:FilterableListView.View>
                </controls:FilterableListView>
            </Grid>
        </Border>
    </Grid>
