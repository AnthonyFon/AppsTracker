                        <Trigger Property="IsMouseOver"
                                 Value="True">

                            <Setter TargetName="Ellipse"
                                    Property="Fill"
                                    Value="{DynamicResource WindowBorderBrush}">

                                <!--Setter.Value>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FFF9F9F9"
                                                      Offset="0" />
                                        <GradientStop Color="#FF3A688F"
                                                      Offset="1" />
                                    </RadialGradientBrush>
