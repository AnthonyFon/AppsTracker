                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>-->
        </StackPanel>
        <Separator HorizontalAlignment="Right"
                   Margin="0,20,0,20"
                   Background="DarkGray">
            <Separator.LayoutTransform>
                <RotateTransform Angle="90" />
            </Separator.LayoutTransform>
        </Separator>
        <controls:FaderContentControl Grid.Column="1"
                                      Content="{Binding SelectedChild}"
                                      Margin="15"/>

    </Grid>
